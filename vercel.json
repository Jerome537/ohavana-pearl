{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "regions": ["cdg1"],
  "crons": [
    {
      "path": "/api/sync/notion",
      "schedule": "*/10 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/healthz",
      "destination": "/api/health"
    }
  ],
  "functions": {
    "src/app/api/sync/notion/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/payments/webhook/route.ts": {
      "maxDuration": 30
    }
  }
}